{
  "name": "esbuild-c",
  "version": "0.0.0",
  "description": "Empowers esbuild with config processing",
  "private": true,
  "type": "module",
  "main": "target/cjs/index.cjs",
  "exports": {
    ".": {
      "types": "./target/dts/index.d.ts",
      "require": "./target/cjs/index.cjs",
      "import": "./target/esm/index.mjs",
      "default": "./target/esm/index.mjs"
    }
  },
  "module": "target/esm/index.mjs",
  "types": "target/dts/index.d.ts",
  "files": [
    "target/cjs",
    "target/esm",
    "target/dts",
    "target/coverage/lcov.info"
  ],
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:index": "yarn build:esbuild",
    "build:dts": "yarn build:tsc",
    "build:docs": "yarn build:typedoc",
    "test": "concurrently 'npm:test:*'",
    "test:lint": "yarn test:eslint",
    "test:unit": "yarn test:c8",
    "publish:draft": "yarn build && npm publish --no-git-tag-version --tag draft"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antongolub/misc.git",
    "directory": "packages/esbuild/c"
  },
  "author": "Anton Golub <antongolub@antongolub.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/misc/issues"
  },
  "homepage": "https://github.com/antongolub/misc/tree/master/packages/esbuild/c",
  "dependencies": {
    "cosmiconfig": "^9.0.0"
  },
  "peerDependencies": {
    "esbuild": ">=0.19.0"
  },
  "devDependencies": {
    "@antongolub/infra": "workspace:*",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "esbuild-node-externals": "^1.11.0"
  }
}
